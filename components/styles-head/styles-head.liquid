{%- style -%}
  :root {
    /* Typography */
    --heading-font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    --heading-font-weight: {{ settings.heading_font.weight }};
    --heading-font-style: {{ settings.heading_font.style }};
    --body-font-family: {{ settings.body_font.family }}, {{ settings.body_font.fallback_families }};
    --body-font-weight: {{ settings.body_font.weight }};
    --body-font-style: {{ settings.body_font.style }};

    /* Color schemes */
    --color-scheme-1-bg: {{ settings.color_scheme_1_bg.rgb }};
    --color-scheme-1-text: {{ settings.color_scheme_1_text.rgb }};
    --color-scheme-2-bg: {{ settings.color_scheme_2_bg.rgb }};
    --color-scheme-2-text: {{ settings.color_scheme_2_text.rgb }};
    --color-scheme-3-bg: {{ settings.color_scheme_3_bg.rgb }};
    --color-scheme-3-text: {{ settings.color_scheme_3_text.rgb }};
  }

  /* Font Faces */
  {%- liquid
    assign heading_font = heading_font | default: settings.heading_font
    assign body_font = body_font | default: settings.body_font

    if heading_font
      assign heading_font_italic = heading_font | font_modify: 'style', 'italic'

      echo heading_font | font_face: font_display: 'fallback'

      if heading_font_italic
        echo heading_font_italic | font_face: font_display: 'fallback'
      endif
    endif

    if body_font
      assign body_font_italic = body_font | font_modify: 'style', 'italic'
      assign body_font_bold = body_font | font_modify: 'weight', 'bolder'
      assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'

      echo body_font | font_face: font_display: 'fallback'

      if body_font_italic
        echo body_font_italic | font_face: font_display: 'fallback'
      endif

      if body_font_bold
        echo body_font_bold | font_face: font_display: 'fallback'
      endif

      if body_font_bold_italic
        echo body_font_bold_italic | font_face: font_display: 'fallback'
      endif
    endif
  -%}
{%- endstyle -%}


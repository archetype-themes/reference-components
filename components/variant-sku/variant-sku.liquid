{%- comment -%}
  Renders the SKU of a given variant

  Accepts:
  - variant {variant} - Variant object

  Usage:
  {% render 'variant-sku', variant: variant %}
{%- endcomment -%}

{%- liquid
  assign variant = variant | default: product.selected_or_first_available_variant
-%}

<variant-sku>
  {%- if variant.sku != blank -%}
    SKU: {{ variant.sku }}
  {%- endif -%}
</variant-sku>

<script type="module">
  import 'component.variant-sku'
</script>

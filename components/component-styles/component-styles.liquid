{%- comment -%}
  Renders the list of CSS token variables

  Accepts:
  - styles [''] - List of optional stylesheets to include. Defaults to all.

  Usage:
  {% render 'component-styles' %}
{%- endcomment -%}

{%- capture required_styles -%}
  size,
  base,
  util
{%- endcapture -%}

{%- capture optional_styles -%}
  aspect-ratio,
  button,
  color-schemes,
  page-width,
  placeholder-svg,
  position,
  rte,
  select,
  table,
  typography,
  util
{%- endcapture -%}

{% assign styles = styles | split: ', ' %}
{% assign load_all = styles == blank %}
{% assign required_styles_array = required_styles | split: ', ' %}
{% assign optional_styles_array = optional_styles | split: ', ' %}

{% render 'font-faces' %}

{%- style -%}
  /* ASSUMED TO BE NEEDED FOR EVERY COMPONENT */
  {% for style in required_styles_array %}
    @import url('{{ style | append: ".css" | asset_url }}');
  {% endfor %}

  /* SELECTIVE STYLES IF SPECIFIED PER COMPONENT */
  {% for style in optional_styles_array %}
    {% if load_all or styles contains style %}
      @import url('{{ style | append: ".css" | asset_url }}');
    {% endif %}
  {% endfor %}

  /* GLOBAL THEME-LEVEL OVERRIDES */
  @import url('{{ 'theme.css' |  asset_url}}');
{%- endstyle -%}

{%- style -%}
  .block-video-wrapper {
    width: 1500px;
    max-width: 100%;
  }
{%- endstyle -%}

{%- liquid
  for block in section.blocks
    case block.type
      when 'video'
        render 'block-video', block: block
    endcase
  endfor
-%}

{% schema %}
{
  "name": "t:labels.video",
  "settings": [],
  "blocks": [
    {
      "type": "video",
      "name": "t:labels.video",
      "settings": [
        {
          "type": "video_url",
          "id": "external_video",
          "label": "t:labels.youtube_vimeo",
          "accept": ["youtube", "vimeo"],
          "default": "https://www.youtube.com/watch?v=Q4Nx2KgUd0s"
        }
      ]
    }
  ]
}
{% endschema %}

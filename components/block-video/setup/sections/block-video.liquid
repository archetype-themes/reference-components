{%- liquid
  for block in section.blocks
    case block.type
      when 'video'
        render 'block-video', block: block
    endcase
  endfor
-%}

{% schema %}
{
  "name": "t:labels.product",
  "settings": [],
  "blocks": [
    {
      "type": "video",
      "name": "t:labels.video",
      "settings": [
        {
          "type": "video_url",
          "id": "external_video",
          "label": "YouTube/Vimeo",
          "accept": ["youtube", "vimeo"],
          "default": "https://www.youtube.com/watch?v=9bZkp7q19f0"
        }
      ]
    }
  ]
}
{% endschema %}
